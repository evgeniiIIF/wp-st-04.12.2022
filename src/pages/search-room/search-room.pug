extends ../../assets/main.pug

block variables
	- var title = 'Toxin';
	- var description = 'Бронирование отелей';
	//- - var pageClass = 'show-sidebar';
	
block content
	main.main
		.container
			.main__body
				.main__sidebar.sidebar-left
					.sidebar-left__icon.icon-sidebar
						.icon-sidebar__body
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5 12L5 4" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><path d="M19 20L19 18" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><path d="M5 20L5 16" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><path d="M19 12L19 4" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><path d="M12 7L12 4" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><path d="M12 20L12 12" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><circle cx="5" cy="14" r="2" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><circle cx="12" cy="9" r="2" stroke="#33363F" stroke-width="2" stroke-linecap="round"/><circle cx="19" cy="15" r="2" stroke="#33363F" stroke-width="2" stroke-linecap="round"/></svg>
					.sidebar-left__body.sidebar-body
						.sidebar-body__calendar
							+air-datepicker-calendar({
								drop1:{
									js: false, 
									readonly: true,
									dropdownId: 'drop3',
									label: 'даты пребывания в отеле', 
									type: 'text', 
									placeholder: 'ДД.ММ.ГГГГ', 
									tabindex: 1,
									arrowSvg: {
										name: 'expand-more', 
										fill: '#1F2041',
										opacity: '0.5'
									}
								},
							})
						+item-quantity-dropdown({
							js: true,
							readonly: true,
							id: 'guests', 
							dropdownId: 'drop1',
							label: 'гости', 
							type,
							arrowSvg: {
								name: 'expand-more', 
								fill: '#1F2041',
								opacity: '0.5'
							},
							placeholder: 'Сколько гостей', 
							buttons: true, 
							arrowSvg: {
								name: 'expand-more', 
								fill: '#1F2041',
								opacity: '0.5'
							},
							items: [
								{ text:'взрослые', id: 'item1', itemCount: 2 },
								{ text:'дети', id: 'item2', itemCount: 0 },
								{ text:'младенцы', id: 'item3', itemCount: 1 },
							],
							tabindex: 1
						})
						.sidebar-body__slider
							+range-slider({
								title: "диапазон цены"
							})
							p Стоимость за сутки пребывания в номере
						+checkbox-buttons({
							title: 'правила дома',
							items:[
								{text:'Можно курить', isChecked: false},
								{text:'Можно с питомцами', isChecked: true},
								{text:'Можно пригласить гостей (до 10 человек)', isChecked: true},
							],
						})
						+rich-checkbox-buttons({
							title: 'доступность',
							items: [
								{text: 'Широкий коридор', subtext: 'Ширина коридоров в номере не менее 91 см.'},
								{text: 'Помощник для инвалидов', subtext: 'На 1 этаже вас встретит специалист  и проводит до номера.'},
							]
						})
						+item-quantity-dropdown({
							js: true,
							readonly: true,
							id: 'facilities', 
							dropdownId: 'drop2',
							label: 'удобства номера', 
							type:'text',
							arrowSvg: {
								name: 'expand-more', 
								fill: '#1F2041',
								opacity: '0.5'
							},
							placeholder: 'Удобства', 
							buttons: false, 
							items: [
								{ text:'спальни', id: 'item1', itemCount: 2 },
								{ text:'кровати', id: 'item2', itemCount: 2 },
								{ text:'ванные комнаты', id: 'item3', itemCount: 0 },
							],
							tabindex: 1
						})
						+expandable-checkbox-list({
							title: 'дополнительные удобства',
							items:[
								{text:'Завтрак', isChecked: false},
								{text:'Письменный стол', isChecked: true},
								{text:'Стул для кормления', isChecked: true},
								{text:'Кроватка', isChecked: true},
								{text:'Телевизор', isChecked: false},
								{text:'Шампунь', isChecked: false},
							],
							arrowSvg: {
								name: 'expand-more', 
								fill: '#1F2041',
								opacity: '0.5'
							}
						})
				.main__content
					h1.main__title.type-h1 Номера, которые мы для вас подобрали
					.main__cards
						include ./room-cards.pug
					.main__pagination
						+pagination({
							title: ''
						})
		.mask-sidebar